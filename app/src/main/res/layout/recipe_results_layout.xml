<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_recipeName"
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:text="recipeName"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_RecipeAuthor"
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:layout_marginStart="3dp"
        android:text="recipeHost"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView_recipeName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_RecipeDate"
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:layout_marginStart="3dp"
        android:text="recipeDate"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView_RecipeAuthor"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_RecipeLikes"
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:layout_marginStart="3dp"
        android:text="recipeLikes"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView_RecipeDate"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>